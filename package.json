{
  "name": "digital-twin",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "test": "vite build --mode test",
    "build": "vite build --mode production",
    "preview:dev": "vite preview --port 3666 --mode development",
    "preview:test": "vite preview --port 4000 --mode test",
    "preview:prod": "vite preview --port 4173 --mode production",
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue src --fix",
    "format": "prettier --write \"src/**/*.{js,vue,json,css,scss}\"",
    "prepare": "echo 'Husky hooks setup would go here'",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.9.0",
    "element-plus": "^2.9.9",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.24.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.3.5"
  }
}
